<%- include("./partials/header.ejs") %>

<div class="container">
  <div class="row">
    <div class="col-sm-6 mt-5">
      <h2 class="alert alert-success text-center">Add New Student</h2>

      <form method="post">
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input for="text" class="form-control" id="name" name="name" />
        </div>

        <div class="mb-3">
          <label for="age" class="form-label">Age</label>
          <input for="text" class="form-control" id="age" name="age" />
        </div>

        <div class="mb-3">
          <label for="fees" class="form-label">Fees</label>
          <input for="text" class="form-control" id="fees" name="fees" />
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
    <div class="col-sm-6 mt-5">
      <h2 class="alert alert-danger text-center">List of Student</h2>

      <%# Show all Data %>

      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Name</th>
            <th scope="col">Age</th>
            <th scope="col">Fees</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% var i=1 %> <% data.forEach((item)=>{ %>
          <tr>
            <td><%= i++%></td>
            <td><%= item.name %></td>
            <td><%= item.age %></td>
            <td><%= item.fees %></td>
            <td>
              <i class="bi bi-pen"></i>
              <i class="bi bi-trash3"></i>
            </td>
          </tr>
          <% })%>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include("./partials/footer.ejs") %>
